{
    "name": "jbsnewmedia/bootstrap-bundle",
    "type": "symfony-bundle",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "description": "Lightweight tools to scaffold and compile Bootstrap SCSS using scssphp. Provides console commands (bootstrap:init, bootstrap:compile) with sensible defaults and vendor-aware import paths.",
    "authors": [
        {
            "name": "Juergen Schwind",
            "email": "juergen.schwind@jbs-newmedia.de"
        }
    ],
    "require": {
        "php": ">=8.2",
        "scssphp/scssphp": "*",
        "twbs/bootstrap": "^5.3",
        "symfony/framework-bundle": "^6.4 || ^7.0",
        "symfony/console": "^6.4 || ^7.0"
    },
    "config": {
        "bump-after-update": true,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "JBSNewMedia\\BootstrapBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "extra": {
        "symfony": {
            "bundle": {
                "JBSNewMedia\\\\BootstrapBundle\\\\BootstrapBundle": ["all"]
            }
        }
    }
}
